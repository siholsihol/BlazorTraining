@inherits R_Page

<R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="4">
            Lower Case
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox @bind-Value="@StringValue"
                       CharacterCasing="@R_eCharacterCasing.Lower" />
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="4">
            Upper Case
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox @bind-Value="@StringValue"
                       CharacterCasing="@R_eCharacterCasing.Upper" />
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="4">
            Normal Case
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox @bind-Value="@StringValue"
                       CharacterCasing="@R_eCharacterCasing.Normal" />
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

@code {
    private string StringValue { get; set; }
}
