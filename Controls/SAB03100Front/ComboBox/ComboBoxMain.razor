@inherits R_Page

<R_GroupBox Title="R_ComboBox">
    <R_ItemLayout col="4">
        <R_ComboBox @ref="@_comboboxRef" 
                    Data="@_comboBoxList" 
                    TextField="@nameof(CategoryDTO.Name)" 
                    ValueField="@nameof(CategoryDTO.Id)"
                    @bind-Value="@_selectedCategory" PopupMaxHeight="50px">

        </R_ComboBox>
    </R_ItemLayout>
</R_GroupBox>

@code { 
    private List<CategoryDTO> _comboBoxList = new();
    private int _selectedCategory = 0;
    private R_ComboBox<CategoryDTO, int> _comboboxRef;

    protected override async Task R_Init_From_Master(object poParameter)
    {
        _comboBoxList = CategoryService.GetCategories();

        await _comboboxRef.FocusAsync();
    }
}
