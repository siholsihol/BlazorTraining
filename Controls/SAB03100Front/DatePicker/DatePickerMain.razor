@inherits R_Page
@attribute [R_Page(Title = "R_DatePicker")]

<R_GroupBox Title="R_DatePicker">
    <R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>DateTime :</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_DatePicker @bind-Value=@_dateTimeValue />
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_Label>@_dateTimeValue</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <br />

        <R_StackLayout Row>
            <R_ItemLayout col="2">
                <R_Label>Nullable DateTime :</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_DatePicker @bind-Value=@_nullDateTimeValue />
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_Label>@_nullDateTimeValue</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>
</R_GroupBox>

@code {
    private DateTime _dateTimeValue = DateTime.Now;
    private DateTime? _nullDateTimeValue;
}
