@inherits R_Page

<R_Button OnClick="@OnClick">
    Click Me!
</R_Button>

@code {
    [Inject] private R_PreloadService _preloadService { get; set; }

    private async Task OnClick()
    {
        try
        {
            await _preloadService.Show();

            await Task.Delay(5000);
        }
        catch (Exception)
        {

        }
        finally
        {
            await _preloadService.Hide();
        }

    }
}
