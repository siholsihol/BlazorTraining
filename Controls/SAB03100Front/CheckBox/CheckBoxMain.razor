@inherits R_Page

<R_GroupBox Title="R_CheckBox">
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_CheckBox @bind-Value="@_isCheck"></R_CheckBox>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_Label FontColor="@R_eFontColor.Danger" FontStyle="@R_eFontStyle.Bold">@_isCheckString</R_Label>
        </R_ItemLayout>
    </R_StackLayout>
</R_GroupBox>

@code {
    private bool _isCheck = false;
    private string _isCheckString => _isCheck.ToString();

    protected override Task R_Init_From_Master(object poParameter)
    {
        return Task.CompletedTask;
    }

    private void ValueChanged(bool plValue)
    {
        _isCheck = plValue;
    }
}
