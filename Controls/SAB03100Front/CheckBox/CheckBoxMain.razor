@inherits R_Page

<R_GroupBox Title="R_CheckBox">
    <R_StackLayout Row>
        <R_ItemLayout xs="1">
            <R_CheckBox @bind-Value="@_isCheck" ValueChanging="@ValueChanging"></R_CheckBox>
        </R_ItemLayout>
        <R_ItemLayout xs="3">
            <R_Label>@_isCheckString</R_Label>
        </R_ItemLayout>
    </R_StackLayout>
</R_GroupBox>

@code {
    private bool _isCheck = false;
    private string _isCheckString => _isCheck.ToString();

    protected override Task R_Init_From_Master(object poParameter)
    {
        return Task.CompletedTask;
    }

    private void ValueChanging(R_CheckBoxValueChangingEventArgs eventArgs)
    {
        eventArgs.Cancel = true;
    }

    private void ValueChanged(bool plValue)
    {
        _isCheck = plValue;
    }
}
